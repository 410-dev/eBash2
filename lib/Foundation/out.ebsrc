#!/bin/bash

export C_DEFAULT="\033[39m"
export BLACK="\033[30m"
export DARK_GRAY="\033[1;30m"
export LIGHT_GRAY="\033[0;37m"
export RED="\033[91m"
export GREEN="\033[92m"
export YELLOW="\033[93m"
export BLUE="\033[34m"
export MAGENTA="\033[95m"
export CYAN="\033[96m"

function print() {
	echo -ne "$@"
}

function println() {
	echo -e "$@${C_DEFAULT}"
}

function updateLastLine() {
	echo -ne "\r\033[0K$@"
}

export -f println
export -f print
export -f updateLastLine