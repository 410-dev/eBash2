function isBackFloatLesser() {
	if (( $(echo "$1 > $2" |bc -l) )); then
		if [[ $(String.isNull "$3") ]]; then
			echo "true"
		else
			export $3="true"
		fi
	fi
}

export -f float
export -f addf
export -f subtractf
export -f multiplyf
export -f dividef
export -f isFrontFloatGreater
export -f isFrontFloatLesser
export -f isBackFloatGreater
export -f isBackFloatLesser